package Util;

/**
 * Helper function to keep track of the scores
 */
public class Score {
    private int user0Score;
    private int user1Score;

    /**
     * Constructor
     */
    public Score() {
        this.user0Score = 0;
        this.user1Score = 0;
    }

    /**
     * Increment user0 score
     */
    public void user0Win() {
        this.user0Score++;
    }

    /**
     * Increment user1 score
     */
    public void user1Win() {
        this.user1Score++;
    }

    /**
     * @return user0's score
     */
    public int getUser0Score() {
        return this.user0Score;
    }

    /**
     * @return user1's score
     */
    public int getUser1Score() {
        return this.user1Score;
    }

    /**
     * @return String representation of the score
     */
    public String getScoreString() {
        return new String(" Score: " + this.user0Score + " - " + this.user1Score);
    }
}
